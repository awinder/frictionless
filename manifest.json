{
  "name": "Frictionless Clicking",
  "version": "1.0.0",
  "description":
    "Read articles on Facebook without being prompted to add apps.",
  "icons": {"48": "48.png", "128": "128.png"},
  "permissions": [
    "contextMenus",
    "cookies",
    "idle",
    "notifications",
    "unlimitedStorage",
    "http://www.facebook.com/*",
    "https://www.facebook.com/*"
  ],
  "content_scripts": [{
    "matches": [
      "http://www.facebook.com/dialog/permissions.request?app_id=180444840287*",
      "https://www.facebook.com/dialog/permissions.request?app_id=180444840287*",
      "http://www.facebook.com/dialog/permissions.request?app_id=225771117449558*",
      "https://www.facebook.com/dialog/permissions.request?app_id=225771117449558*"
    ],
    "js": ["content.js"],
    "run_at": "document_end"
  }]
}
